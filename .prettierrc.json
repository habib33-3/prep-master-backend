{
  "trailingComma": "all",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "importOrder": [
    "^node:(.*)$",
    "^(fs|path|os|util|crypto)(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^express$",
    "^@nestjs/(.*)$",
    "^nestjs/(.*)$",
    "@/common/(.*)$",
    "@/config/(.*)$",
    "@/constants/(.*)$",
    "@/decorators/(.*)$",
    "@/exceptions/(.*)$",
    "@/filters/(.*)$",
    "@/interceptors/(.*)$",
    "@/middlewares/(.*)$",
    "@/utils/(.*)$",
    "@/dto/(.*)$",
    "@/shared/(.*)$",
    "^@/(.*)$",
    "^src/(.*)$",
    "^[./]"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-packagejson"
  ],
  "parser": "typescript",
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": "*.env",
      "options": {
        "parser": "yaml",
        "tabWidth": 2
      }
    },
    {
      "files": "*.yml",
      "options": {
        "parser": "yaml",
        "tabWidth": 2
      }
    }
  ]
}
